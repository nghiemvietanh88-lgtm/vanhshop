# Environment
NODE_ENV=development

# Server Port
PORT=3001

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/vanh-shop

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----\n"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CLIENT_ID_MOBILE=your-google-mobile-client-id.apps.googleusercontent.com

# Email Configuration (Gmail)
MAILER_SERVICE=gmail
MAILER_AUTH_USER=your-email@gmail.com
MAILER_AUTH_PASS=your-app-specific-password

# VNPay Configuration
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_SECRET=your-vnpay-secret-key
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
